# create alias and reboot bashrc
alias bashrc="nano ~/.bashrc && source ~/.bashrc"

# make dir and enter it
alias mdir='_(){ mkdir $1 && cd $1; }; _'

# sudo -s
alias s='sudo -s'

# chmod u+x
alias e='chmod u+x'

# pyton remove
alias rpy='rm -r  __pycache__'

# clear
alias c='clear'

# show process of port

alias port='_(){ netstat -punlt |grep :$1; }; _'

# kill process
alias portkill='kill -9'
